   <children>
      <Pane prefHeight="400.0" prefWidth="600.0">
         <children>
            <Label layoutX="126.0" layoutY="27.0" text="TICKET DETAILS">
               <font>
                  <Font size="50.0" />
               </font>
            </Label>
            <Label layoutX="111.0" layoutY="113.0" text="FIRST NAME">
               <font>
                  <Font size="20.0" />
               </font>
            </Label>
            <Label layoutX="111.0" layoutY="163.0" text="SECOND NAME">
               <font>
                  <Font size="20.0" />
               </font>
            </Label>
            <Label layoutX="111.0" layoutY="213.0" text="EMAIL">
               <font>
                  <Font size="20.0" />
               </font>
            </Label>
            <TextField fx:id="firstNameText" layoutX="280.0" layoutY="116.0" prefHeight="25.0" prefWidth="210.0" />
            <TextField fx:id="secondNameText" layoutX="280.0" layoutY="166.0" prefHeight="25.0" prefWidth="210.0" />
