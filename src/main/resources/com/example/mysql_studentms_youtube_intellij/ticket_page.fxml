      </Pane>
      <Button layoutX="363.0" layoutY="320.0" mnemonicParsing="false" onAction="#onShowButtonClick" prefHeight="31.0" prefWidth="97.0" style="-fx-background-radius: 15;" text="SHOW">
         <font>
            <Font size="18.0" />
         </font>
      </Button>
      <Button layoutX="143.0" layoutY="320.0" mnemonicParsing="false" onAction="#onHomeButtonClick" prefHeight="31.0" prefWidth="97.0" style="-fx-background-radius: 15;" text="HOME">
         <font>
            <Font size="18.0" />
         </font>
      </Button>
   </children>
</AnchorPane>
